<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="NFC Reader Host" 
           Language="1033" 
           Version="$(var.Version)" 
           Manufacturer="NFC Reader" 
           UpgradeCode="d1e2f3a4-b5c6-4d78-9abc-def012345678">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perUser" 
             Description="Native messaging host for NFC card reader browser extension" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <!-- Application Icon -->
    <Icon Id="AppIcon.ico" SourceFile="app-icon.ico" />
    <Property Id="ARPPRODUCTICON" Value="AppIcon.ico" />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLDIR" Name="NFC Reader Host" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="NFC Reader Host"/>
      </Directory>
    </Directory>

    <Feature Id="ProductFeature" Title="NFC Reader Host" Level="1">
      <ComponentGroupRef Id="ApplicationFiles" />
      <ComponentGroupRef Id="RegistryEntries" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>

    <!-- Application Shortcut -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="e4f5a6b7-c8d9-4e01-bcde-f01234567890">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="NFC Reader Host"
                  Description="Native messaging host for NFC card reader browser extension"
                  Target="[INSTALLDIR]nfc-reader-host.exe"
                  WorkingDirectory="INSTALLDIR"
                  Icon="AppIcon.ico"/>
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\NFC Reader\NFC Reader Host" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

  </Product>

  <!-- Registry Entries for Native Messaging -->
  <Fragment>
    <ComponentGroup Id="RegistryEntries">
      <Component Id="ChromeNativeMessaging" 
                 Guid="a1b2c3d4-e5f6-4789-abcd-ef0123456789" 
                 Directory="INSTALLDIR">
        <RegistryKey Root="HKCU"
                     Key="SOFTWARE\Google\Chrome\NativeMessagingHosts\info.nfcreader.host">
          <RegistryValue Type="string"
                        Value="[INSTALLDIR]installer-scripts\\windows\\info.nfcreader.host.json"
                        KeyPath="yes" />
        </RegistryKey>
      </Component>
      
      <Component Id="EdgeNativeMessaging" 
                 Guid="b2c3d4e5-f6a7-4890-bcde-f01234567890" 
                 Directory="INSTALLDIR">
        <RegistryKey Root="HKCU"
                     Key="SOFTWARE\Microsoft\Edge\NativeMessagingHosts\info.nfcreader.host">
          <RegistryValue Type="string"
                        Value="[INSTALLDIR]installer-scripts\\windows\\info.nfcreader.host.json"
                        KeyPath="yes" />
        </RegistryKey>
      </Component>
      
      <Component Id="FirefoxNativeMessaging" 
                 Guid="c3d4e5f6-a7b8-4901-cdef-012345678901" 
                 Directory="INSTALLDIR">
        <RegistryKey Root="HKCU"
                     Key="SOFTWARE\Mozilla\NativeMessagingHosts\info.nfcreader.host">
          <RegistryValue Type="string"
                        Value="[INSTALLDIR]installer-scripts\\windows\\info.nfcreader.host.firefox.json"
                        KeyPath="yes" />
        </RegistryKey>
      </Component>
    </ComponentGroup>
  </Fragment>

</Wix>
